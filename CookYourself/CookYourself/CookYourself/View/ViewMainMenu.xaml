                    <Image x:Name="imgPudimSalgados" HorizontalAlignment="Left" Height="61" VerticalAlignment="Top" Width="100" Margin="19,332,0,0" Source="/CookYourself;component/Images/Food/Pudim de Leite Condensado.png" Grid.Column="1"/>
                    <Label x:Name="lblPudimSalgados" Content="Pudim de Leite Condensado" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="129,332,0,0" Height="50" Width="286" FontSize="18.667" FontFamily="Verdana" Grid.Column="1" Foreground="#FFFF6800" Cursor="Hand" MouseDoubleClick="lblPudim_MouseDoubleClick"/>
                    <Image x:Name="imgMargaritaSalgados" HorizontalAlignment="Left" Height="63" VerticalAlignment="Top" Width="100" Margin="19,212,0,0" Source="/CookYourself;component/Images/Food/Margarita Mexicana.png" Grid.Column="1"/>
