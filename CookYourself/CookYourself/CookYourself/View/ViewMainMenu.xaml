<Window x:Name="MainMenuScreen" x:Class="CookYourself.View.ViewMainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookYourself.View"
        mc:Ignorable="d"
        Title="Cook Yourself" Height="700" Width="1400" Background="#FF505050" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/CookYourself;component/Images/icon.jpg">

    <!-- Remove button hover property-->
    <Window.Resources>

        <Style x:Key="NoHover" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" BorderThickness="0" BorderBrush="Black" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <!-- End of property-->


    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="578" VerticalAlignment="Top" Width="1374" Margin="10,62,0,0">
            <TabItem x:Name="Inicio" Margin="-2,-2,-2,0">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/CookYourself;component/Images/Icons/50px/home.png" />
                        <TextBlock Text="Início" Foreground="Black" FontFamily="Verdana" FontSize="14"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtObjetivo" HorizontalAlignment="Left" Height="113" TextWrapping="Wrap" Text="             Nosso site tem como objetivo lhes apresentar receitas simples que não necessitam muito tempo nem muito esforço, para aqueles dias que você precisa mas não quer cozinhar!" TextAlignment="Justify" VerticalAlignment="Top" Width="410" Margin="10,360,0,0" Background="{x:Null}" Foreground="Black" FontSize="18.667" BorderThickness="0" IsEnabled="False" Grid.Column="1"/>
                    <TextBox x:Name="txtJustificativa" HorizontalAlignment="Left" Height="183" TextWrapping="Wrap" Text="        Tenho 17 anos, e meus pais me deixaram em casa por um tempo sozinho, e eu já estava cansado de cozinhar todo dia, então resolvi procurar receitas simples para fazer, mas a coisa mais difícil na internet é encontrar coisas simples, principalmente quando você precisa.." TextAlignment="Justify" VerticalAlignment="Top" Width="410" Margin="518,305,0,0" Background="{x:Null}" Foreground="Black" FontSize="18.667" BorderThickness="0" IsEnabled="False" Grid.Column="1"/>
                    <Label x:Name="lblObjetivo" Content="Objetivo do Sistema:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,305,0,0" Height="50" Width="410" FontSize="32" FontFamily="Verdana" Grid.Column="1" Foreground="#FFFF6800"/>
                    <Label x:Name="lblJustificativa" Content="Por que este objetivo?" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="518,242,0,0" Height="50" Width="410" FontSize="32" FontFamily="Verdana" Grid.Column="1" Foreground="#FFFF6800"/>
                    <TextBox x:Name="txtInfo" HorizontalAlignment="Left" Height="170" TextWrapping="Wrap" Text="          A água de coco também pode ser usada como plasma sanguíneo, em casos de emergência." TextAlignment="Justify" VerticalAlignment="Top" Width="398" Margin="530,122,0,0" Background="{x:Null}" Foreground="Black" FontSize="18.667" BorderThickness="0" IsEnabled="False" Grid.Column="1"/>
                    <Image x:Name="image1" HorizontalAlignment="Left" Height="265" VerticalAlignment="Top" Width="502" Margin="10,35,0,0" Source="/CookYourself;component/Images/Food/aguadecoco.jpg" Grid.ColumnSpan="1" Grid.Column="1"/>
                    <Label x:Name="lblReceitasFamosas" Content="Mensagens recentes:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="948,10,0,0" Height="50" Width="410" FontSize="32" FontFamily="Verdana" Grid.Column="1" Foreground="#FFFF6800"/>
                    <Image x:Name="imgMargarita" HorizontalAlignment="Left" Height="63" VerticalAlignment="Top" Width="100" Margin="962,212,0,0" Grid.ColumnSpan="2" Source="/CookYourself;component/Images/Food/Margarita Mexicana.png" Visibility="Hidden"/>
                    <Image x:Name="imgPudim" HorizontalAlignment="Left" Height="61" VerticalAlignment="Top" Width="100" Margin="962,332,0,0" Grid.ColumnSpan="2" Source="/CookYourself;component/Images/Food/Pudim de Leite Condensado.png" Visibility="Hidden"/>
                    <Label x:Name="lblLasanha" Content="Lasanha de Frango" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1072,105,0,0" Height="50" Width="286" FontSize="18.667" FontFamily="Verdana" Grid.Column="1" Foreground="#FFFF6800" Cursor="Hand" MouseDoubleClick="lblLasanha_MouseDoubleClick" Visibility="Hidden"/>
                    <Label x:Name="lblMargarita" Content="Margarita Mexicana" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1072,212,0,0" Height="50" Width="286" FontSize="18.667" FontFamily="Verdana" Grid.Column="1" Foreground="#FFFF6800" Cursor="Hand" MouseDoubleClick="lblMargarita_MouseDoubleClick" Visibility="Hidden"/>
                    <Label x:Name="lblPudim" Content="Pudim de Leite Condensado" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1072,332,0,0" Height="50" Width="286" FontSize="18.667" FontFamily="Verdana" Grid.Column="1" Foreground="#FFFF6800" Cursor="Hand" MouseDoubleClick="lblPudim_MouseDoubleClick" Visibility="Hidden"/>
                    <Image x:Name="imgLasanha" HorizontalAlignment="Left" Height="54" VerticalAlignment="Top" Width="100" Margin="962,101,0,0" Grid.ColumnSpan="2" Source="/CookYourself;component/Images/Food/LasanhaDeFrango.jpg" Visibility="Hidden"/>
